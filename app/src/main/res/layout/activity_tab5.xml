<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/old"
    >

    <ImageView
        android:id="@+id/tab4_image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text1"
        android:padding="3px"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="320dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinefrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="230dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="470dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineleft"
        android:text="To." />

    <EditText
        android:id="@+id/Tosomeone"
        android:maxLength="10"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:cursorVisible="false"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintLeft_toRightOf="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:textIsSelectable="false"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="50dp" />

    <EditText
        android:id="@+id/inputText"
        android:maxLength="250"
        android:cursorVisible="false"
        app:layout_constraintBottom_toTopOf="@+id/guidelinbot"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:textIsSelectable="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/guidelinbot"
        app:layout_constraintLeft_toLeftOf="@+id/guidelinefrom"
        android:text="From." />

    <EditText
        android:id="@+id/Fromsomeone"
        android:maxLength="6"
        android:layout_marginStart="280dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:cursorVisible="false"
        app:layout_constraintTop_toBottomOf="@+id/guidelinbot"
        app:layout_constraintLeft_toRightOf="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:textIsSelectable="false"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="50dp" />


    <Button android:id="@+id/btn_layout2"
        android:layout_width="150dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/calltab4"
        android:background="@drawable/buttonshape"
        android:text="layout1"/>

    <Button android:id="@+id/send2"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_layout2"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/buttonshape"
        android:text="capture"/>
</androidx.constraintlayout.widget.ConstraintLayout>
